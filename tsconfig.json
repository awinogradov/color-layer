{
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["dom", "dom.iterable", "esnext", "ES2021"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
